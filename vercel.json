{
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@5.0.0"
    }
  },
  "installCommand": "pnpm install --filter ./apps/api... --ignore-scripts",
  "buildCommand": "echo 'skip lint and typecheck' && pnpm --filter @stackquotes/api run build",
  "ignoreCommand": "echo 'ignore lint and eslint'",
  "outputDirectory": ".",
  "env": {
    "NEXT_IGNORE_ESLINT": "true",
    "ESLINT_NO_DEV_ERRORS": "true",
    "DISABLE_ESLINT_PLUGIN": "true"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" }
  ]
}
