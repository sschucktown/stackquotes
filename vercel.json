{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "../api/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "buildCommand": "pnpm build",
  "routes": [
    { "src": "/api/(.*)", "dest": "../api/src/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
