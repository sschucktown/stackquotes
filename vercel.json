{
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@5.0.0"
    }
  },
  "installCommand": "pnpm install --filter ./apps/api... --ignore-scripts",
  "buildCommand": "pnpm --filter @stackquotes/api run build",
  "env": {
    "NEXT_DISABLE_ESLINT": "true",
    "ESLINT_NO_DEV_ERRORS": "true",
    "DISABLE_ESLINT_PLUGIN": "true"
  },
  "eslint": false,
  "ignoreCommand": "echo 'Skip lint and typecheck'",
  "ignore": [".eslintrc.*", "eslint.config.js", "**/.eslintrc*", "**/eslint.config.js"],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" }
  ]
}
