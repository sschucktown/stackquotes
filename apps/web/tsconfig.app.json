{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,

    "outDir": "dist",
    "rootDir": "../..",

    "baseUrl": ".",
    "types": ["node", "vite/client"],

    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],

      "@stackquotes/types": ["../../packages/types/src/index.ts"],
      "@stackquotes/ui": ["../../packages/ui/src/index.ts"],
      "@stackquotes/config": ["../../packages/config/src/index.ts"],
      "@stackquotes/db": ["../../packages/db/src/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/*/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
