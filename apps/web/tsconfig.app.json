{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../..",
    "jsx": "preserve",

    "composite": false,
    "noEmit": false,
    "emitDeclarationOnly": false,

    "types": ["node", "vite/client"]
  },
  "include": [
    "src/**/*",
    "../../packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
