{
  "name": "stackquotes",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache",
    "dev:web": "pnpm --filter @stackquotes/web dev",
    "dev:api": "pnpm --filter @stackquotes/api dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "seed:test": "tsx scripts/seed_test_data.ts",
    "vercel-build": "pnpm turbo run build --filter=@stackquotes/web --filter=@stackquotes/api --verbosity=3"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@vercel/node": "^5.5.16",
    "concurrently": "^8.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "turbo": "^2.5.8",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "dotenv": "^17.2.3",
    "hono": "^4.9.10"
  }
}
